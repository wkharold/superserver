<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">
    <bean id="dispatcherBean" class="com.dell.dea.superserver.dispatcher.impl.DispatcherServiceImpl"/>

    <list id="handlerListener" interface="com.dell.dea.superserver.handler.HandlerService" cardinality="0..N">
        <listener ref="dispatcherBean" bind-method="bindHandler" unbind-method="unbindHandler"/>
    </list>

    <service id="dispatcherService"
             interface="com.dell.dea.superserver.dispatcher.DispatcherService"
             ref="dispatcherBean"/>
</blueprint>